<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    android:layout_height="match_parent"
    tools:context="com.ermile.sarshomari.Fragments.newPollFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:padding="0dp"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="17dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/type_title"
                android:text="@string/type_title"
                tools:ignore="MissingPrefix"
                fontPath="fonts/IRANSans.ttf"
                android:layout_height="wrap_content" />


                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner_type"
                    android:layout_width="match_parent"
                    app:ms_background_color="#f7f7f7"
                    android:textColor="@color/colorAccent"
                    app:ms_text_color="@color/colorAccent"
                    android:layout_height="wrap_content"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/new_poll_title_EditText"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:hint="@string/new_title"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/new_poll_description_EditText"
                        android:hint="@string/new_description"
                        />





                    <TextView
                        android:layout_width="match_parent"
                        android:text="@string/photo_title"
                        android:layout_marginTop="40dp"
                        tools:ignore="MissingPrefix"
                        fontPath="fonts/IRANSans.ttf"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="#f44336"
                            android:text="@string/upload"
                            android:layout_marginTop="10dp"
                            android:id="@+id/upload_image_btn"
                            android:textColor="#ffffff"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:id="@+id/new_poll_thumbnail"
                            android:src="@drawable/thumbnew"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:scaleType="fitCenter"
                            android:layout_height="160dp" />


                    </LinearLayout>

                    <!--single choice poll-->
                    <include layout="@layout/new_single_poll_layout" android:id="@+id/single_choose_poll" android:visibility="gone" />


                    <!--file poll-->
                    <include layout="@layout/new_file_poll_layout" android:id="@+id/file_poll" android:visibility="gone"/>

                    <!--range poll-->
                    <include layout="@layout/new_rangebar_poll_layout" android:id="@+id/range_poll" android:visibility="gone"/>

                </LinearLayout>



            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:text="@string/new_submit"
                android:textColor="#ffffff"
                android:background="#8BC34A"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content" />

        </LinearLayout>




    </ScrollView>






</FrameLayout>
