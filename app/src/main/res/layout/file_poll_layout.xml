<?xml version="1.0" encoding="utf-8"?>
<com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:parallax_factor="3"
    android:background="#fff"
    >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/windowspoll"
            android:id="@+id/single_answer_image"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/single_answer_title"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="این یک عنوان نظرسنجی است؟"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/single_answer_description"
                android:layout_marginTop="4dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:padding="10dp"
                android:lineSpacingExtra="10dp"
                android:text="لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است و برای شرایط فعلی تکنولوژی مورد نیاز و کاربردهای متنوع با هدف بهبود ابزارهای کاربردی می باشد. کتابهای زیادی در شصت و سه درصد گذشته، حال و آینده شناخت فراوان جامعه و متخصصان را می طلبد "
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="wrap_content"
                android:text="@string/download"
                android:background="#e51c23"
                android:paddingLeft="20dp"

                android:layout_marginTop="10dp"
                android:layout_marginBottom="19dp"
                android:paddingRight="20dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:layout_height="40dp" />







        </LinearLayout>



    </LinearLayout>
</com.nirhart.parallaxscroll.views.ParallaxScrollView>